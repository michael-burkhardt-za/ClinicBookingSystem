@page "/patients"
@inject HttpClient Http
@inject NavigationManager Nav
@inject ISnackbar Snackbar



<MudPaper Class="pa-4">

    <MudStack Row="true" Justify="Justify.SpaceBetween" AlignItems.Center" Class="mb-4">
        <MudText Typo="Typo.h5">Patients</MudText>

        <MudButton Variant="Variant.Filled"
                   Color="Color.Primary"
                   StartIcon="@Icons.Material.Filled.Add"
                   OnClick="CreatePatient">
            Create New Patient
        </MudButton>
    </MudStack>

    <MudTable Items="_patients"
              Hover="true"
              Bordered="true"
              Striped="true"
              Loading="_loading">

        <HeaderContent>
            <MudTh>First Name</MudTh>
            <MudTh>Last Name</MudTh>
            <MudTh>Email</MudTh>
            <MudTh Align="Align.Right">Actions</MudTh>
        </HeaderContent>

        <RowTemplate>
            <MudTd DataLabel="First Name">@context.FirstName</MudTd>
            <MudTd DataLabel="Last Name">@context.LastName</MudTd>
            <MudTd DataLabel="Email">@context.Email</MudTd>

            <MudTd Align="Align.Right">
                <MudIconButton Icon="@Icons.Material.Filled.Edit"
                               Color="Color.Primary"
                               OnClick="@(() => EditPatient(context.Id))" />

                <MudIconButton Icon="@Icons.Material.Filled.Delete"
                               Color="Color.Error"
                               OnClick="@(() => DeletePatient(context.Id))" />
                <MudButton Variant="Variant.Filled"
                           Color="Color.Info"
                           StartIcon="@Icons.Material.Filled.Bookmark"
                           OnClick="@(() => ShowPatientAppointments(context.Id))">
                    Appointments
                </MudButton>
            </MudTd>
        </RowTemplate>

        <NoRecordsContent>
            <MudText>No patients found.</MudText>
        </NoRecordsContent>

    </MudTable>

</MudPaper>

@code {

    private List<PatientDto> _patients = new();
    private bool _loading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadPatients();
    }

    private async Task LoadPatients()
    {
        try
        {
            _loading = true;
            _patients = await Http.GetFromJsonAsync<List<PatientDto>>("patients") ?? new();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Error loading patients: {ex.Message}", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private void CreatePatient()
    {
        Nav.NavigateTo("/patient/create");
    }

    private void EditPatient(int id)
    {
        Nav.NavigateTo($"/patient/edit/{id}");
    }

    private void ShowPatientAppointments(int id)
    {
        Nav.NavigateTo($"/patientappointments/{id}");
    }

    private async Task DeletePatient(int id)
    {
        var confirmed = await DialogService.ShowMessageBox(
            "Confirm Delete",
            "Are you sure you want to delete this patient?",
            yesText: "Delete",
            cancelText: "Cancel");

        if (confirmed == true)
        {
            var response = await Http.DeleteAsync($"patients/{id}");

            if (response.IsSuccessStatusCode)
            {
                Snackbar.Add("Patient deleted successfully", Severity.Success);
                await LoadPatients();
            }
            else
            {
                Snackbar.Add("Failed to delete patient", Severity.Error);
            }
        }
    }

    [Inject] private IDialogService DialogService { get; set; } = default!;
}